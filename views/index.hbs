<ul class="grid">
  {{#each jokes}}
  <li class=grid__item>
    <article class="card">
      <p class="card__body">{{body}}</p>
      <footer class="card__footer" {{#if self}}style="background-color: #ff7d66"{{/if}}>
        {{#if self}}
        <a class="card__link" href="/delete/{{username}}/{{id}}">
          <svg class="" viewBox="0 0 32 32" width="32" height="32" fill="none" stroke="currentcolor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
          <path d="M28 6 L6 6 8 30 24 30 26 6 4 6 M16 12 L16 24 M21 12 L20 24 M11 12 L12 24 M12 6 L13 2 19 2 20 6"></path></svg>
        </a>
        {{/if}}
        <div class="card__profile">
          <cite>{{name}}</cite><img class="card__img" src={{pic}} alt="">
        </div>
      </footer>
    </article>
  </li>
  {{/each}}
</ul>
